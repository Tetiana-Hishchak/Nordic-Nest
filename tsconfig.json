{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"~assets/*": [
				"src/assets/*"
			],
			"~modules/*": [
				"src/modules/*"
			],
			"~router/*": [
				"src/router/*"
			],
			"~shared/*": [
				"src/shared/*"
			],
			"~/*": [
				"src/*"
			],
			"~types/*": [
				"src/types/*"
			],
			"~stores/*": [
				"src/shared/stores/*"
			],
			"~about-us/*": [
				"src/modules/about-us/*"
			],
			"~ai/*": [
				"src/modules/ai/*"
			]
		}
	},
	"include": [
		"src",
		"src/types/global.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}